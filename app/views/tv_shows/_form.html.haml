= form_for @tv_show do |f|
  - if @tv_show.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tv_show.errors.count, "error")} prohibited this tv_show from being saved:"
      %ul
        - @tv_show.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :channel
    = f.text_field :channel
  .field
    = f.label :genre
    = f.text_field :genre
  .field
    = f.label :run_time
    = f.number_field :run_time
  .field
    = f.label :next_air
    = f.date_select :next_air
  .field
    = f.label :no_seasons
    = f.number_field :no_seasons
  .field
    = f.label :no_episodes
    = f.number_field :no_episodes
  .field
    = f.label :formats
    = f.text_field :formats
  .actions
    = f.submit 'Save'
