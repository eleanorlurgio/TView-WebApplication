<!-- Navigation bar -->

- flash.each do |key, value|
  = content_tag :div, content_tag(:p, value), id: "#{key}" unless value.blank?

%nav.navbar.navbar-default{role: "navigation"}
  / Brand and toggle get grouped for better mobile display
  .navbar-header
    %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
      %span.sr-only Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{href: "/home"} TView
  / Collect the nav links, forms, and other content for toggling
  #bs-example-navbar-collapse-1.collapse.navbar-collapse
    %ul.nav.navbar-nav
      %li
        %a{href: "/home"} Home
      %li
        %a{href: "/tv_shows"} Shows
      %li
        %a{href: "/reviews"} My Reviews
      %li
        %a{href: "/contact"} Contact
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %ul.nav.navbar-nav
          %li
            = link_to t('profile'), edit_user_registration_path, class: ""
          -#= '|'
          %li
            = link_to t('logout'), destroy_user_session_path, method: 'delete', class: ""
      - else
        %ul.nav.navbar-nav
          %li
            = link_to t('login'), new_user_session_path, class: ""
          %li
            = link_to t('sign_up'), new_user_registration_path, class: ""
  / /.navbar-collapse
